<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/filter_header">

        <SwitchPreferenceCompat
            app:key="bench"
            app:title="@string/bench"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="bike"
            app:title="@string/bike"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="washroom"
            app:title="@string/washroom"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="notice"
            app:title="@string/notice"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="info"
            app:title="@string/info"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="poster board"
            app:title="@string/poster"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="newspaper bins"
            app:title="@string/newspaper"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="garbage bin"
            app:title="@string/garbage"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="transit shelter"
            app:title="@string/transit"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/perm_header">

        <ListPreference
            app:defaultValue="Deny"
            app:entries="@array/location_entries"
            app:entryValues="@array/location_values"
            app:key="location"
            app:title="@string/location_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Deny"
            app:entries="@array/storage_entries"
            app:entryValues="@array/storage_values"
            app:key="storage"
            app:title="@string/storage_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>